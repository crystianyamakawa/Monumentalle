<!DOCTYPE html>
<html>
  <head>
    <title>Gestão Monumentalle | <%= @page_title  || "Admin" %></title>
    <!-- Definição do Style Aplication.css-->
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>Gestão Monumentalle</h1>
    </div>
    <% if !flash[:notice].blank? %>
      <div class="notice">
          <%= flash[:notice] %>
      </div>
    <% end %>
    <div id="main">
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; monumentalle.com.br / Crystian Yamakawa </p>
    </div>
  </body>
</html>
