<%= %>
<%= link_to("<< Voltar", {:controller => 'public',
   :action => 'index'}, :class => 'back-link') %>

<div class="use index">

 <%= %>
 <div><%= pluralize(@users.size,'User') %> encontrados</div>

<div class="User List">
  <table summary="User list">
    <tr class="header_1">
      <th>Login</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
    <% @users.each do |user|%>
    <tr class="<%= cycle('odd','even') %> ">
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%#= link_to("Show",{:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Editar",{:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Apagar",{:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

 <%= %>
  <%= link_to("Adicionar Novo Usuário", {:action => 'new'},
              :class => 'action new') %>
  <%= %>
</div>
</div>
